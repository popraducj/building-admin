@using Microsoft.Extensions.Localization
@inject IStringLocalizer<string> Localizer

@using System.Security.Claims;
@{
    ViewData["Title"] = Localizer["Home"];
    ViewData["Description"] = Localizer["Meta description home"];
    ViewData["Keywords"] = Localizer["Keywords home"];
    ViewData["BackgroundImageAlt"] = Localizer["BackgroundImageAlt"];
}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="title">@Localizer["Building admin"]</h1>
                <h4>@Localizer["Subtitle"]</h4>
            </div>
        </div>
    </div>
</div>

<div class="main main-raised">
    <div class="container">
        <div class="section text-center">
            <div class="row">
                
                <div class="col-md-8 ml-auto mr-auto">
                    <h2 class="title">@Localizer["Lets talk product"]</h2>
                    <h5 class="description"> @Localizer["Building-admin.com is for a relaxed administrator. We invite you to try it out!"]</h5>
                    <h5 class="description"> @Localizer["We aim to help building administrators"]</h5>
                    <h5 class="description"> @Localizer["You can"] <a href="@Url.AbsoluteAction("Index", "Contact")">@Localizer["contact us"]</a> @Localizer["anytime"]</h5>
                    <br />
                    <h2 class="title">@Localizer["Our offer"]</h2>
                </div>
            </div>
            <div class="features">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info">
                            <div class="icon icon-success">
                                <i class="material-icons">important_devices</i>
                            </div>
                            <h4 class="info-title">@Localizer["Anytime, anywhere and any device"]</h4>
                            <p>@Localizer["Anytime, anywhere and any device text"]</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info">
                            <div class="icon icon-primary">
                                <i class="material-icons">email</i>
                            </div>
                            <h4 class="info-title">@Localizer["Email notification"]</h4>
                            <p>@Localizer["Email notification text"]</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="info">
                            <div class="icon icon-primary">
                                <i class="material-icons">airplay</i>
                            </div>
                            <h4 class="info-title">@Localizer["Innovative design"]</h4>
                            <p>@Localizer["Innovative design text"]</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info">
                            <div class="icon icon-success">
                                <i class="material-icons">flash_on</i>
                            </div>
                            <h4 class="info-title">@Localizer["Quick and easy"]</h4>
                            <p>@Localizer["Quick and easy text"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>